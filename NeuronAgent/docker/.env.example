# NeuronAgent Docker Configuration
# Copy this file to .env and modify as needed

# Database connection - point to external NeuronDB instance
# When connecting to NeuronDB Docker container:
#   - From same Docker network: use container name (e.g., neurondb-cpu)
#   - From host machine: use localhost or host.docker.internal
DB_HOST=localhost
DB_PORT=5433
DB_NAME=neurondb
DB_USER=neurondb
DB_PASSWORD=neurondb

# Server configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s

# Database connection pool
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Optional: Path to config.yaml file (inside container)
CONFIG_PATH=
