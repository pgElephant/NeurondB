# NeuronMCP Docker Configuration
# Copy this file to .env and modify as needed

# Database connection - point to external NeuronDB instance
# When connecting to NeuronDB Docker container:
#   - From same Docker network: use container name (e.g., neurondb-cpu)
#   - From host machine: use localhost or host.docker.internal
NEURONDB_HOST=localhost
NEURONDB_PORT=5433
NEURONDB_DATABASE=neurondb
NEURONDB_USER=neurondb
NEURONDB_PASSWORD=neurondb

# Alternative: use connection string (overrides individual settings)
# NEURONDB_CONNECTION_STRING=postgresql://neurondb:neurondb@localhost:5433/neurondb

# Optional: Path to config file (inside container)
NEURONDB_MCP_CONFIG=/app/mcp-config.json

# Logging
NEURONDB_LOG_LEVEL=info
NEURONDB_LOG_FORMAT=text
NEURONDB_LOG_OUTPUT=stderr

# Feature flags
NEURONDB_ENABLE_GPU=false
