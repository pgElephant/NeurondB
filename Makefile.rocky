# Platform wrapper: Rocky/RHEL/CentOS
# Import detected settings from build.sh first
-include Makefile.local

# Try common PostgreSQL locations; fallback to PATH, only if PG_CONFIG unset
PG_CONFIG ?= /usr/pgsql-18/bin/pg_config
ifeq ("$(wildcard $(PG_CONFIG))","")
PG_CONFIG := $(shell command -v pg_config 2>/dev/null || echo /usr/bin/pg_config)
endif
export PG_CONFIG

# Defer to preserved project build logic
include Makefile.core


